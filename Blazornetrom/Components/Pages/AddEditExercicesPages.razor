@page "/exercies/add"
@page "/exercies/edit/{ExerciseId:int?}"

@using Blazornetrom.DTOs
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms

<h3>@Title</h3>

<EditForm Model="exerciesDTO" OnValidSubmit="SaveExercies">
    <DataAnnotationsValidator />
    @*<ValidationSummary />*@

    <div class="form-group">
        <label>Description:</label>
        <InputText @bind-Value="exerciesDTO.Description" class="form-control" />
        <ValidationMessage For="@(() => exerciesDTO.Description)" />
    </div>
    
    <div class="form-group">
        <label>Type:</label>
        <InputText @bind-Value="exerciesDTO.Type" class="form-control" />
        <ValidationMessage For="@(() => exerciesDTO.Type)" />
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>
</EditForm>