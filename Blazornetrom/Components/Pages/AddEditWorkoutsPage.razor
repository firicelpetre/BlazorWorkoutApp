﻿

@page "/workout/add/{UserId:int}"
@page "/workouts/edit/{WorkoutId:int?}"



@using Blazornetrom.DTOs
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms

@using Blazornetrom.Entites

<h3>AddOrEdit</h3>

<EditForm Model="workoutsDTO" OnValidSubmit="SaveWorkout">
    <DataAnnotationsValidator />

    <InputNumber @bind-Value="workoutsDTO.Id" hidden></InputNumber>

    <div class="form-group">
        <label>First Name :</label>
        <div>
            <InputText @bind-Value="workoutsDTO.Name" class="form-control col-sm-3" />
            <ValidationMessage For="@(() => workoutsDTO.Name)" />
        </div>
    </div>
    <div class="form-group">
        <label>Last Name :</label>
        <div>
            <InputDate @bind-Value="workoutsDTO.Date" class="form-control col-sm-3" />
            <ValidationMessage For="@(() => workoutsDTO.Date)" />
        </div>
    </div>
    

    

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>
</EditForm>