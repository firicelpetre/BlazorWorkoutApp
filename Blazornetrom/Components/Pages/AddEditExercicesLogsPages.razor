@page "/exerciceslogs/add"
@page "/exerciceslogs/add/{WorkoutId:int}"
@page "/exerciceslogs/edit/{ExercicesLogsId:int?}"


@using Microsoft.AspNetCore.Authorization

@using Blazornetrom.DTOs
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@using Blazornetrom.Entites

<h3>AddOrEdit</h3>

<EditForm Model="exercicesLogsDTO" OnValidSubmit="SaveExerciesLogs">
    <DataAnnotationsValidator />

    <InputNumber @bind-Value="exercicesLogsDTO.Id" hidden></InputNumber>

    <div class="form-group">
        <label>Reps :</label>
        <div>
            <InputNumber @bind-Value="exercicesLogsDTO.Reps" class="form-control col-sm-3" />
            <ValidationMessage For="@(() => exercicesLogsDTO.Reps)" />
        </div>
    </div>
    <div class="form-group">
        <label>Duration:</label>
        <div>
            <InputNumber @bind-Value="exercicesLogsDTO.Duration" class="form-control col-sm-3" TValue="int" />
            <ValidationMessage For="@(() => exercicesLogsDTO.Duration)" />
        </div>
    </div>

    <div class="form-group">
        <label>Select the exercise:</label>
        <div>
            <InputSelect @bind-Value="exercicesLogsDTO.ExerciseId" class="form-control col-sm-3">
                @foreach (var exercise in ListExercises)
                {
                    <option value="@exercise.Id">@exercise.Type</option>
                }
            </InputSelect>
            <ValidationMessage For="@(() => exercicesLogsDTO.ExerciseId)" />
        </div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>
</EditForm>


